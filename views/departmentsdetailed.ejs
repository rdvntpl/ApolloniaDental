<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Apollonia Dental</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container-fluid">
            <!-- Links -->
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/employee">Employees</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/department">Departments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/departmentsdetailed">Departments with Staff</a>
              </li>
            </ul>
          </div>
         
    </nav>
    <div class="container pt-5">
    <h2>Departments With Staff</h2>
        <ul class="list-group list-group-flush">
            <% list.forEach((e)=> { %>
                <li class="list-group-item">
                    <%= e.name %>
                    <ul>
                        <% e.Staff.forEach((s)=> { %>
                            <li>
                                <%= s.name %>
                                <%= s.surname %>
                            </li>
                        <% }) %>
                    </ul>
                </li>

            <% }) %>
        </ul>
    </div>
</body>
</html>