<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Staff | Apollonia Dental</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .navbar-nav .nav-link {
            color: #2c3e50;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: color 0.3s ease;
        }
        .navbar-nav .nav-link:hover {
            color: #3498db;
        }
        .page-header {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .table {
            box-shadow: 0 0 20px rgba(0,0,0,.05);
            border-radius: 10px;
            overflow: hidden;
        }
        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #dee2e6;
            color: #2c3e50;
        }
        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }
        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
        .modal-content {
            border-radius: 15px;
            border: none;
        }
        .modal-header {
            background-color: #f8f9fa;
            border-radius: 15px 15px 0 0;
        }
        .form-control, .form-select {
            border-radius: 8px;
        }
        .staff-row {
            transition: transform 0.3s ease;
        }
        .staff-row:hover {
            transform: translateY(-2px);
            background-color: #f8f9fa;
        }
        .department-badge {
            background-color: #e3f2fd;
            color: #3498db;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-tooth text-primary"></i>
                <span class="ms-2 fw-bold">Apollonia Dental</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/employee"><i class="fas fa-user-md"></i> Medical Staff</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/department"><i class="fas fa-hospital"></i> Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/departmentsdetailed"><i class="fas fa-list-alt"></i> Staff Directory</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin"><i class="fas fa-cogs"></i> Admin Panel</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <header class="page-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="fw-bold">Medical Staff</h1>
                    <p class="lead mb-0">Our healthcare professionals</p>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="table-responsive">
            <table class="table table-hover bg-white">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Department</th>
                    </tr>
                </thead>
                <tbody>
                    <% list.forEach((e)=> { %>
                        <tr class="staff-row">
                            <td class="align-middle"><%= e.name %></td>
                            <td class="align-middle"><%= e.surname %></td>
                            <td class="align-middle">
                                <span class="department-badge">
                                    <i class="fas fa-hospital-alt me-2"></i>
                                    <% departments.forEach((d)=> { if(d._id.equals(e.departmentId)) { %>
                                        <%= d.name %>
                                    <% } }) %>
                                </span>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>